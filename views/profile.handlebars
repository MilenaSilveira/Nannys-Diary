<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create child:{{childData.child_name}}</h3>

    <form class="form new-comment-form">
 {{#each childData}}
      <p for="comment-name">child name:{{childData.child_name}}</p>
      <input class="form-input" type="text" id="comment-name" name="comment-name" />
    {{/each}}

      <label for="comment-funding">???? ($):</label>
      <input class="form-input" type="number" id="comment-funding" name="comment-funding" />


      <label for="comment-desc">description:</label>
      <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>


      <button type="submit" class="btn btn-primary">Create</button>
  </div>
  </form>
</div>

{{#if comments.length}}
<div class="col-md-6 comment-list">
  <h3>Your child:</h3>

  {{#each comments as |comment|}}
  <div class="row mb-2">
    <div class="col-md-8">
      <h4><a href="/comment/{{comment.id}}">{{comment.name}}</a></h4>
    </div>
    <div class="col-md-4">
      <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
</div>

<script src="./js/profile.js"></script>