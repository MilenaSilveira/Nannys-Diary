<!-- Loop over each object in the projects array -->
{{#each comments as |comment| }}
<div class="row mb-4 project"> //project class
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
   
      <a href="/comment/{{comment.id}}">{{comment.name}}</a>
    </h2>
      <!-- Pass needed_funding value to the helper function -->
  
    <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{comment.description}}
    </p>
  </div>
</div>
{{/each}}
