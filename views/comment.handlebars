<div class="container col-md-6" style="margin-top: 2.5em; background-color: #f8f9fa; border: 3px solid rgb(247, 243, 243);">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h2 class="text-center" style="margin-top: 1em;">{{child.child_name}}</h2>
        
        <div class="row">
          <div class="col-md-12">
            <p><strong>Diet Restriction:</strong></p>
            <p>{{child.diet_restrictions}}</p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <p><strong>Medication:</strong></p>
            <p>{{child.medications}}</p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <p><strong>Other:</strong></p>
            <p>{{child.other}}</p>
          </div>
        </div>
        
        <form class="new-comment">
          <div class="form-group">
            <textarea class="form-control" id="post-comment" name="post-comment" rows="3" placeholder="Parents Notes:"></textarea>
          </div>
          <button type="submit" class="btn btn-primary rounded-pill" style="margin-top: 20px; margin-bottom: 20px;">Submit</button>
        </form>
      </div>
    </div>
  </div>


    {{#if comments.length}}
  <div class="col-md-6 mx-auto mt-3 child-list" >
    <h3 class="text-center">Child's comments:</h3>


    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <a 
          class="text-light btn btn-outline-primary btn-lg rounded-pill">{{comment.post_comment}}</a>
          <a>{{comment.date_created}}</a>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger rounded-pill" data-id="{{child.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>



<script src="/js/comments.js"></script>